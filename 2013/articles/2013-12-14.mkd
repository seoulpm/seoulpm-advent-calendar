    #!perl
    get '/read/:id' => sub {
	my $self = shift;

	my $input_id = $self->param('id');

	my $sth = $DBH->prepare(qq{ SELECT * FROM memo WHERE id=$input_id });
	$sth->execute();

	my %articles;
	my ( $id, $name, $title, $content, $date ) = $sth->fetchrow_array;
	my ($wdate) = split / /, $date;

	$articles{$id} = {
	    name    => $name,
	    title   => $title,
	    content => $content,
	    wdate   => $wdate,
	};

	$self->stash(
	    articles => \%articles,
	    id       => $id,
	);
	$self->render('read');
    };

