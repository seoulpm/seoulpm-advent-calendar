    #!/usr/bin/env perl

    use v5.16;
    use utf8;

    use Mojolicious::Lite;

    get  '/'           => sub { };
    get  '/list'       => sub { };
    get  '/write'      => sub { };
    post '/write'      => sub { };
    get  '/read/:id'   => sub { };
    get  '/edit/:id'   => sub { };
    post '/edit'       => sub { };
    get  '/delete/:id' => sub { };

    app->start;

