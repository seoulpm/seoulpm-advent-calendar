    <!DOCTYPE html>
    <html>
      <head>
        <title><%= title %></title>
      </head>
      <body>
        <%= content %>
      </body>
    </html>

    @@ write.html.ep
    % layout 'default';
    % title 'WRITE';


    @@ list.html.ep
    % layout 'default';
    % title 'LIST';


    @@ read.html.ep
    % layout 'default';
    % title 'READ';


    @@ edit.html.ep
    % layout 'default';
